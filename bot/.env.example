# LLM（任选其一：SILICONFLOW_* / DEEPSEEK_* / OPENAI_API_KEY）
SILICONFLOW_API_KEY=your_token_here
SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1
SILICONFLOW_MODEL=deepseek-ai/DeepSeek-V3

# Google Programmable Search（Custom Search JSON API，可选）
# 需要在 Google Cloud 启用 Custom Search API，并创建 Programmable Search Engine（拿到 cx）
GOOGLE_CSE_API_KEY=your_google_api_key_here
GOOGLE_CSE_CX=your_search_engine_cx_here
# 可选：地域/语言倾向
GOOGLE_CSE_GL=cn
GOOGLE_CSE_HL=zh-CN
# 如果容器无法直连 Google（googleapis.com 超时），把这里填成你的 Clash 代理（宿主机 7890）：
GOOGLE_CSE_PROXY=http://host.docker.internal:7890

# 代理（可选）：如果容器无法直连 Google / 外网，设置为宿主机代理地址
# 常见示例（宿主机开了 Clash 等）：http://host.docker.internal:7890
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=127.0.0.1,localhost,napcat

# Qwen-VL（百炼 DashScope OpenAI 兼容）
DASHSCOPE_API_KEY=your_dashscope_key_here
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
## DashScope 地域（用于 REST/WebSocket 等非 compatible-mode 接口）
## cn=北京；intl=新加坡（与你 Key 所在地域一致）
DASHSCOPE_REGION=cn
QWEN_VL_MODEL=qwen-vl-plus-latest
VL_MAX_EDGE=1024
VL_MAX_DOWNLOAD_BYTES=8388608
VL_MAX_OUTPUT_TOKENS=300
VL_JPEG_QUALITY=82
VL_MAX_IMAGES=2
# 可选：DashScope 代理
DASHSCOPE_PROXY=http://host.docker.internal:7890

# 主动互动（可选）
# 1=开启，0=关闭
PROACTIVE_ENABLED=1
# 扫描间隔（分钟）
PROACTIVE_INTERVAL_MINUTES=5
# 用户多久没说话后才会主动（小时）
PROACTIVE_IDLE_HOURS=8
# 每个用户每天最多主动几次
PROACTIVE_MAX_PER_DAY=2
# 主动后冷却（分钟）
PROACTIVE_COOLDOWN_MINUTES=240

# RSS（可选）：逗号/空格/换行分隔
# 不填则使用插件内置默认源（避开 rsshub，提升可用性）
# RSS_FEEDS=https://www.thepaper.cn/rss,https://www.huxiu.com/rss/0.xml
RSS_FEEDS=

# === 财经日报（A股收盘TopN）===
# Tushare Pro Token（必需）
TUSHARE_TOKEN=your_tushare_token_here
# 数据源：eastmoney（推荐兜底）/tushare/auto
FIN_DAILY_DATA_PROVIDER=eastmoney
# 可选：Eastmoney 走代理（默认取 HTTP_PROXY）
FIN_DAILY_EASTMONEY_PROXY=
# 1=开启，0=关闭
FIN_DAILY_ENABLED=1
# 定时（按容器 TZ；docker-compose 默认 Asia/Shanghai）
FIN_DAILY_RUN_HOUR=15
FIN_DAILY_RUN_MINUTE=20
# 榜单数量
FIN_DAILY_TOP_N=5
# 过滤：新股上市天数 < X
FIN_DAILY_NEW_LIST_DAYS=20
# 过滤：成交额阈值（元）
FIN_DAILY_AMOUNT_MIN=200000000
# 公告回看天数（TopN 很小，可按股票拉近7天；设为0则只看当日）
FIN_DAILY_ANN_LOOKBACK_DAYS=7
# LLM 并发（默认2；太大可能触发网关限流）
FIN_DAILY_LLM_CONCURRENCY=2
# 输出模式：xiao_a=小a口吻多段气泡；raw=渲染器拼接（不推荐）
FIN_DAILY_OUTPUT_MODE=xiao_a
# 聊天模式：1=总览+一股一条；0=自由分段（不推荐）
FIN_DAILY_CHAT_PER_STOCK=1
# 是否发送总览
FIN_DAILY_OVERVIEW_ENABLED=1
# 单股消息最大长度（字符）
FIN_DAILY_ITEM_MAX_CHARS=280
# 推送目标：逗号/空格分隔，例如 private:123456
FIN_DAILY_TARGETS=
# 广播：发给小a的所有好友（仅私聊，不发群）
# 方式1：显式开关
FIN_DAILY_BROADCAST_ALL_FRIENDS=0
# 方式2：把 FIN_DAILY_TARGETS 填成 all_friends（等价于开启广播）
# FIN_DAILY_TARGETS=all_friends
# 广播节流：两次发送间隔（秒）
FIN_DAILY_SEND_INTERVAL_SECONDS=0.8
# 广播上限：0=不限制（谨慎，好友很多时可能触发风控）
FIN_DAILY_BROADCAST_LIMIT=0
